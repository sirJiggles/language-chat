# Copy this file to .env and fill in your values
# Flutter will read these at launch via --dart-define-from-file=.env

# Target language for the assistant
TARGET_LANGUAGE=Spanish

# Ollama (local LLM)
# Use 127.0.0.1 for iOS Simulator / macOS; use 10.0.2.2 for Android Emulator
OLLAMA_BASE_URL=http://127.0.0.1:11434
OLLAMA_MODEL=deepseek-r1:8b

# Text-to-Speech
# Mode: 'device' uses on-device TTS; 'local_http' uses the local TTS server below
TTS_MODE=device
# If using local_http, point to the local TTS server URL
# For iOS Simulator/macOS:
TTS_HTTP_URL=http://127.0.0.1:6060
# For Android Emulator, override to:
# TTS_HTTP_URL=http://10.0.2.2:6060

# Optional TTS preferences
# VOICE_NAME=Anna
TTS_RATE=0.5
TTS_PITCH=1.0
